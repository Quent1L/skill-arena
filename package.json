{
  "name": "skill-arena-monorepo",
  "version": "0.1.0",
  "description": "Skill Arena - Tournament Management Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run dev:shared\" \"bun run dev:backend\" \"bun run dev:frontend\" --names \"shared,backend,frontend\" --prefix-colors \"blue,green,yellow\"",
    "dev:shared": "cd shared && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build": "bun run build:shared && bun run build:frontend",
    "build:shared": "cd shared && bun run build",
    "build:frontend": "cd frontend && bun run build",
    "type-check": "bun run type-check:shared && bun run type-check:backend && bun run type-check:frontend",
    "type-check:shared": "cd shared && bun run type-check",
    "type-check:backend": "cd backend && bun run type-check",
    "type-check:frontend": "cd frontend && bun run type-check",
    "clean": "bun run clean:shared && bun run clean:frontend && bun run clean:backend",
    "clean:shared": "cd shared && rm -rf dist .tsbuildinfo",
    "clean:backend": "cd backend && rm -rf .tsbuildinfo",
    "clean:frontend": "cd frontend && rm -rf dist node_modules/.tmp"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "workspaces": {
    "packages": [
      "shared",
      "backend",
      "frontend"
    ],
    "catalog": {
      "zod": "4.1.12",
      "better-auth": "1.3.34",
      "typescript": "5.3.3"
    }
  }
}
